use crate::ast::*;
use crate::ident::Ident;
use crate::lexer::TokenKind;
use super::Ctx;

grammar<'a>(ctx: &Ctx<'a>);

pub Program: Program<'a> = {
    <stmt_list:StmtList> EofTok => Program { stmt_list },
}

StmtList: StmtList<'a> = {
    Lf? <stmts:(<Stmt>)*> => StmtList { stmts },
}

Stmt: Stmt<'a> = {
    <Expr> Lf => Stmt::Expr(<>),
    <VarDef> => Stmt::VarDef(<>),
    <FuncDef> => Stmt::FuncDef(<>),
    "pass" Lf => Stmt::Pass,
}

Expr: Expr<'a> = {
    <Lit> => Expr::Lit(<>),
}

VarDef: VarDef<'a> = {
    "var" <IdentDef> Lf => {
        VarDef {
            def: <>,
        }
    }
}

FuncDef: FuncDef<'a> = {
    "func" <name:Ident> "(" <param_list:ParamList> ")" <result_ty:ResultSpec?> ":" Lf
    IndentTok <body:StmtList> DedentTok => {
        FuncDef { name, param_list, result_ty, body }
    }
}

ResultSpec: Expr<'a> = {
    "->" <Expr>
}

ParamList: ParamList<'a> = {
    <mut params:(<IdentDef> ",")*> <e:IdentDef?> => {
        if let Some(p) = e {
            params.push(p);
        }
        ParamList { params }
    }
}

IdentDef: IdentDef<'a> = {
    <name:Ident> <ty:(":" <Expr>)?> "=" <val:Expr?> => {
        if let Some(ty) = ty {
            IdentDef {
                name, ty: TySpec::Ty(ty), val,
            }
        } else {
            IdentDef {
                name, ty: TySpec::Any, val,
            }
        }
    },
    <name:Ident> ":" "=" <val:Expr> => {
        IdentDef {
            name, ty: TySpec::Inferred, val: Some(val),
        }
    }
}

Ident: Ident<'a> = {
    <start:@L> IdentTok <end:@R> => {
        let s = ctx.src(start..end);
        ctx.ident_cache.new_ident(s)
    }
}

Lit: Lit = {
    <IntLit> => Lit::Int(<>),
}

IntLit: i128 = {
    <start:@L> IntLitTok <end:@R> => {
        let s = ctx.src(start..end);
        i128::from_str_radix(s, 10).unwrap()
    }
}


